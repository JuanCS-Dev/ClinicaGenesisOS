# ============================================
# ClinicaGenesisOS - Variáveis de Ambiente
# ============================================
# Copie este arquivo para .env.local e preencha os valores
# NUNCA commit .env.local para o repositório!

# ============================================
# Firebase Configuration
# ============================================
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# ============================================
# PIX Direto (Opcional)
# ============================================
# Chave PIX para pagamentos diretos (sem Stripe)
VITE_PIX_KEY=
VITE_PIX_KEY_TYPE=cpf
VITE_PIX_MERCHANT_NAME=Nome da Clínica
VITE_PIX_MERCHANT_CITY=Cidade

# ============================================
# Stripe (Opcional - para Boleto)
# ============================================
# Configure no Firebase Functions secrets
# stripe:secret_key
# stripe:webhook_secret

# ============================================
# Azure OpenAI (Cloud Functions)
# ============================================
# Configure no Firebase Secret Manager:
# firebase functions:secrets:set AZURE_OPENAI_KEY
# firebase functions:secrets:set AZURE_OPENAI_ENDPOINT

# ============================================
# Jitsi Meet (Telemedicina)
# ============================================
VITE_JITSI_DOMAIN=meet.jit.si

# ============================================
# Feature Flags
# ============================================
VITE_ENABLE_AI_SCRIBE=true
VITE_ENABLE_TELEMEDICINE=true
VITE_ENABLE_PIX=true
VITE_ENABLE_TISS=true
