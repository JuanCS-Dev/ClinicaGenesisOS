rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatares de pacientes - apenas usuários autenticados da clínica
    match /clinics/{clinicId}/avatars/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');
    }

    // Anexos de prontuário - apenas usuários autenticados
    match /clinics/{clinicId}/attachments/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 20 * 1024 * 1024;  // Max 20MB
    }

    // Gravações AI Scribe - apenas usuários autenticados
    // Path: recordings/{clinicId}/{date}/{patientId}/{fileName}
    match /recordings/{clinicId}/{date}/{patientId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 100 * 1024 * 1024;  // Max 100MB (~30min áudio)
    }

    // Lab Documents (Clinical Reasoning) - apenas usuários autenticados
    // Path: clinics/{clinicId}/labDocuments/{patientId}/{fileName}
    match /clinics/{clinicId}/labDocuments/{patientId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 15 * 1024 * 1024  // Max 15MB
        && (request.resource.contentType.matches('image/.*')
            || request.resource.contentType == 'application/pdf');
    }

    // Record attachments - apenas usuários autenticados
    // Path: clinics/{clinicId}/records/{recordId}/attachments/{fileName}
    match /clinics/{clinicId}/records/{recordId}/attachments/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 10 * 1024 * 1024;  // Max 10MB
    }

    // Patient avatars - alternative path
    // Path: clinics/{clinicId}/patients/{patientId}/{fileName}
    match /clinics/{clinicId}/patients/{patientId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 5 * 1024 * 1024  // Max 5MB
        && request.resource.contentType.matches('image/.*');
    }

    // Bloqueia todo o resto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
